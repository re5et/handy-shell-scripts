#! env bash

echo '********************************************************************************************************************************'
uptime
echo '********************************************************************************************************************************'
echo ' '

echo ' '
echo '* DISK FREE'
echo '********************************************************************************************************************************'
echo ' '

df -h

echo ' '
echo '* MEMORY USAGE'
echo '********************************************************************************************************************************'
echo ' '

free -m

echo ' '
echo '* TOP MEMORY CONSUMERS'
echo '********************************************************************************************************************************'
echo ' '

ps aux --sort -rss | head -9

echo ' '
echo '* TOP CPU CONSUMERS'
echo '********************************************************************************************************************************'
echo ' '

ps aux --sort -%cpu | head -9
echo '********************************************************************************************************************************'
cat /proc/mdstat